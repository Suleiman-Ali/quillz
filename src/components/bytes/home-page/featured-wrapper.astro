---
interface Props {
  title: string;
  text: string;
  href: string;
}

const { title, text, href } = Astro.props;
---

<section class="flex flex-col gap-5">
  <h2 class="text-2xl sm:text-3xl font-semibold text-zinc-800">
    {title}
  </h2>
  <slot />
  <a
    {href}
    class="mt-3 text-sm sm:text-base max-w-max py-2.5 px-10 rounded-sm self-center flex items-center group bg-zinc-700 text-white hover:bg-zinc-800 transition shadow"
    >{text}<svg
      class="w-[13px] h-[13px] ms-2 rtl:rotate-180 group-hover:translate-x-1 translate-y-[1px] transition"
      aria-hidden="true"
      xmlns="http://www.w3.org/2000/svg"
      fill="none"
      viewBox="0 0 14 10"
    >
      <path
        stroke="currentColor"
        stroke-linecap="round"
        stroke-linejoin="round"
        stroke-width="2"
        d="M1 5h12m0 0L9 1m4 4L9 9"></path>
    </svg></a
  >
</section>
